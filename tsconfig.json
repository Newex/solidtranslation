{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"incremental": true,
		"isolatedModules": true,
		"lib": [
			"ES2018",
			"ES2020",
			"DOM",
			"ESNext"
		]
	},
	"include": [ "src" ],
	"exclude": [ "dist", "node_modules" ]
}
